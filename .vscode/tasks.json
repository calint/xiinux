{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "xiinux build",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++23",
                "-Wfatal-errors",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Weffc++",
                "-Wsign-conversion",
                "-Wold-style-cast",
                "-Wshadow",
                "-Wctad-maybe-unsupported",
                "-Wconversion",
                "-Wcast-align",
                "-Wcast-qual",
                "-Wctor-dtor-privacy",
                "-Wdisabled-optimization",
                "-Wlogical-op",
                "-Wmissing-declarations",
                "-Wmissing-include-dirs",
                "-Woverloaded-virtual",
                "-Wredundant-decls",
                "-Wsign-promo",
                "-Wstrict-null-sentinel",
                "-Wswitch-default",
                "-Wundef",
                "-Wfloat-equal",
                "-Wnoexcept",
                "-Wno-unused-parameter",
                "-fdiagnostics-color=always",
                "-g",
                // "-O3",
                "-o",
                "xiinux",
                "src/main.cpp",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "xiinux build"
        }
    ],
    "version": "2.0.0"
}