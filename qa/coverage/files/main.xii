use session,file,text,number;

typealine{
	line="";
	size="";
	typealine(){
		size=session.file("typealine.log").size;
	}
	render(xwriter){
		x.html5().title("typealine)
		 .css("html","background:blue");
		 .css(line,"width:30em");
		 .p(glyph).p(log.length).p("typealine:").input(line).button(clk,"send");
	}
	x_clk(xwriter){
		var log=session.file("typealine.log");
		log.p(line).p("\n");
		log_size=log.size;
		line="";
		glyph=random_glyph();
	}
private:
	glyph=random_glyph();
	random_glyph():text{
		var glyphs=".oO";
		return glyphs.substring(rnd(0,glyph.length),1);
	}
}

